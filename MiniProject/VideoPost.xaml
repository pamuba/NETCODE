<UserControl
    x:Class="MiniProject.VideoPost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:MiniProject"
    mc:Ignorable="d" 
    d:DesignHeight="450" 
    d:DesignWidth="800"
    >
    <StackPanel>
        <ContentControl 
            MouseDoubleClick="ContentControl_MouseDoubleClick"
            Height="250"
        >
            <MediaElement Name="VideoPlayer" 
                          Stretch="UniformToFill" 
            />
        </ContentControl>
        <local:PostOperations x:Name="PostOps" Height="40"></local:PostOperations>
        <local:PostLikedBy></local:PostLikedBy>
    </StackPanel>

</UserControl>
