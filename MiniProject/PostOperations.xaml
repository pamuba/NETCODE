<UserControl 
    x:Class="MiniProject.PostOperations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:MiniProject"
    mc:Ignorable="d" 
    d:DesignHeight="60" 
    d:DesignWidth="550"
    >
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image  Name="Heart"                  
                    Margin="8" 
                    Source="/Icons/nolike.png" 
                    Stretch="Uniform"
                    MouseDown="Heart_MouseDown"
            />
            <Image  
                    Margin="8" 
                    Source="/Icons/comment.png" 
                    Stretch="Uniform"
            />
            <Image 
                    Margin="8" 
                    Source="/Icons/send.png" 
                    Stretch="Uniform"
            />
        </StackPanel>
        <Image Margin="8" Source="/Icons/bookmark.png" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
