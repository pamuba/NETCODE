<Window x:Class="LabelsDemos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabelsDemos"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="200">
    <StackPanel Margin="15">
        <Label BorderThickness="1" BorderBrush="Black">
            <StackPanel Orientation="Horizontal">
                <Image Margin="0,2,0,0" Width="15" Source="https://cdn0.iconfinder.com/data/icons/cosmo-work/40/mail-512.png" Height="15"/>
                <AccessText Text="Email Message"></AccessText>
            </StackPanel>
        </Label>
        <TextBox Margin="0,5,0,0" FontSize="35"></TextBox>
    </StackPanel>
</Window>
