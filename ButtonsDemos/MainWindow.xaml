<Window x:Class="ButtonsDemos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonsDemos"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="200">
    <StackPanel>
        <Button Width="50" Click="Button_Click" MouseDoubleClick="Button_MouseDoubleClick" 
           MouseEnter="Button_MouseEnter"  MouseLeave="Button_MouseLeave"   Content="Button"/>
        
        <TextBox></TextBox>
    </StackPanel>
</Window>
