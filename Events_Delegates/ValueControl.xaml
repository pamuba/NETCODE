<UserControl x:Class="Events_Delegates.ValueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Events_Delegates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Width="80"
            Height="60"
            HorizontalAlignment="Left"
            FontSize="30"
            Click="Inc_Button_Click">+</Button>
            <Button Width="80"
            Height="60"
            FontSize="30"
            HorizontalAlignment="Left"
            Click="Dec_Button_Click">-</Button>
        </StackPanel>
        <Border Width="160"
                BorderThickness="2"
                BorderBrush="Black"
                HorizontalAlignment="Left"></Border>
        <TextBox
            HorizontalAlignment="Left"
            x:Name="ValueLabel"
            Width="160"
            Height="40"
            FontSize="20"
            Text="50"
            TextChanged="ValueLabel_TextChanged"/>
   </StackPanel>

</UserControl>
