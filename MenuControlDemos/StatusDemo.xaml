<Window x:Class="MenuControlDemos.StatusDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuControlDemos"
        mc:Ignorable="d"
        Title="StatusDemo" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Button Click="Button_Click" DockPanel.Dock="Top"> Increse By 10</Button>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="loading">
                Loading....
            </StatusBarItem>
            <Separator></Separator>
            <StatusBarItem>
                <ProgressBar x:Name="myPb" Width="100" Height="15" Value="10"></ProgressBar>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
