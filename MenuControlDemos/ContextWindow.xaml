<Window x:Class="MenuControlDemos.ContextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuControlDemos"
        mc:Ignorable="d"
        Title="ContextWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Height="200" x:Name="myTxt">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="miBold" Header="Bold"
                              IsCheckable="True" Checked="miBold_Checked" Unchecked="miBold_Unchecked"></MenuItem>
                    <MenuItem x:Name="miItalic" Header="Italic" Click="miItalic_Click"></MenuItem>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
    </StackPanel>
</Window>
